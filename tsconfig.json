{
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ES2017"
        ],
        "removeComments": true,
        "allowJs": true,
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}